{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "allowJs": true,
    "checkJs": false
  },
  "compileOnSave": false,
  "include": [
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
